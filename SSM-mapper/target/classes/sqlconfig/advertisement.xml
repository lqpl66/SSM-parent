<mapper namespace="com.yl.mapper.AdMapper">
	<select id="getBannerList" resultType="com.bean.Advertisement">
		SELECT * FROM banner
		where
		isDel = 0
		AND TO_DAYS(endDate)
		&gt;=TO_DAYS(NOW())
		AND
		TO_DAYS(startDate)
		&lt;= TO_DAYS(NOW())
	</select>
</mapper>